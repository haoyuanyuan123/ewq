<!--components/bangitem/bangitem.wxml-->
 <view class="bang1" wx:if='{{arr.bac}}' style="background-image:{{'url('+arr.bac+')'}}" >
        <view  style="width:100%;height:100%;background-color:rgba(0,0,0,0.5);padding:0; border-radius: 10rpx;" bindtap="detail" data-link="{{a}}" data-title="{{arr.title}}">
            <text class="bang_tt">
           {{arr.title}}
       </text>
      <view class="bang_img">
          <view>
          <image class="bimg1" src="{{arr.subjects[0].subject.images.large}}"></image>
          <image class="bimg2" src="{{arr.subjects[1].subject.images.large}}"></image>
          <image class="bimg3" src="{{arr.subjects[2].subject.images.large}}"></image>
          </view>
          <view class="count">
                <text >{{"+"+arr.subjects.length}}</text>
          </view>
      </view>
        </view>
     </view>
