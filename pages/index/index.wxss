/**index.wxss**/
.swiper swiper{
  height: 360rpx;
}
.swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
.board{
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
.board-item{
  padding: 15rpx;
  background-color: #fff;
  
}
.title{
  font-size: 16px;
  margin:10rpx 0;
  display: flex;
}
.title text::before{
  display: inline-block;
  content:'';
  width:5rpx;
  height: 35rpx;
  background-color:rgb(118, 191, 250);
  position: absolute;
  left:-2rpx;
  margin-left:4px;
  margin-top:5px;
}
.title text{
  flex:1
}
.title image{
  height: 30rpx;
  width: 25rpx;
  margin-left: 6rpx;
}
.movie-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.movie-item{
  width: 69px;
  margin:10rpx
}
.movie-item image{
  display: block;
  width: 100%;
  height: 230rpx;
}
.movie-item text{
  display: block;
  text-align: center;
  font-size: 14px;
  margin-top: 5px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}