/* miniprogram/pages/page2/page2.wxss */
.bang{
    width: 100%;
    height: 100vh;
  }
  .bang2{
    width: 92%;
    margin: 30rpx auto;
    height: 240rpx;
    border-radius: 10rpx;
    display: flex;
  }
  .bang2_img{
     flex: 1;
  }
  .bang2_img image{
    width: 240rpx;
    height: 240rpx;
  }
  .bang_txt{
    flex: 2;
    padding-left: 40rpx;
    height: 180rpx;
    margin-top: 30rpx;
    border: 2px solid #EFEFEF;
  }
  .bang_txt .bang_text{
     display: block;
     height: 60rpx;
     line-height: 60rpx;
     font-size: 30rpx;
  }
  .bang_txt .bang_text text{
     color: #F7C77E;
     margin-left: 10rpx;
     font-size: 26rpx;
  }